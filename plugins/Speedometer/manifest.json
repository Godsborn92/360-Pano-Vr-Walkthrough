{
    "uid": "org.forgejs.speedometer",
    "name": "Speedometer",
    "shortName": "speedometer",
    "version": "1.0.0",
    "versionName": "Speedometer 1.0.0",
    "description": "Display a simple Speedometer that can be loaded with the metadata from a GoPro.",

    "author":
    {
        "name": "GoPro",
        "website": "https://forgejs.org"
    },

    "licence": "Apache-2.0",

    "viewer":
    {
        "min": "0.9.5",
        "max": "0.9.5"
    },

    "options":
    {
        "width": 256,
        "height": 256,

        "top": null,
        "left": null,
        "right": null,
        "bottom": null,

        "source": "media",
        "visible": true,
        "background": null,

        "lines":
        {
            "color": "#F3F4F4",
            "large": 10,
            "small": 6
        },

        "labels":
        {
            "color": "#F3F4F4",
            "outline": "#141414",
            "font": null,
            "fontFamily": "dosisbold, sans-serif",
            "fontStyle": "normal",
            "fontVariant": "small-caps",
            "fontWeight": "normal"
        },

        "gauge":
        {
            "color": "#009FDF",
            "background": "rgba(0,0,0,0.3)",
            "line": 8
        },

        "value":
        {
            "color": "white",
            "outline": "#141414",
            "font": null,
            "fontFamily": "dosisbold, sans-serif",
            "fontSize": "35px",
            "fontStyle": "normal",
            "fontVariant": "small-caps",
            "fontWeight": "normal"
        },

        "unit":
        {
            "color": "#F3F4F4",
            "outline": "#141414",
            "font": null,
            "fontFamily": "dosisbold, sans-serif",
            "fontSize": "25px",
            "fontStyle": "normal",
            "fontVariant": "small-caps",
            "fontWeight": "normal"
        }
    },

    "data":
    {
        "json": ""
    },

    "sources":
    [
        "src/style.css",
        "src/Speedometer.js"
    ],

    "constructor": "ForgePlugins.Speedometer"
}
