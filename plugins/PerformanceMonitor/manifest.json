{
    "uid": "org.forgejs.performancemonitor",
    "name": "Performance monitor",
    "version": "1.0.0",
    "versionName": "Performance monitor 1.0.0",
    "description": "Displays a performance monitor based on Stats.js (@mrdoob).",
    "licence": "Apache 2",

    "author":
    {
        "name": "GoPro",
        "website": "https://forgejs.org"
    },

    "viewer":
    {
        "min": "0.9.0",
        "max": "0.9.5"
    },

    "options":
    {
        "top": null,
        "right": null,
        "bottom": null,
        "left": null,
        "horizontalCenter": false,
        "verticalCenter": false,
        "draggable": true,
        "mode": 0
    },

    "actions":
    [
        "show",
        "hide"
    ],

    "sources":
    [
        "lib/stats.min.js",
        "src/PerformanceMonitor.js"
    ],

    "constructor": "ForgePlugins.PerformanceMonitor"
}